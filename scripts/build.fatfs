#!/bin/sh

## hyphop ##

#= build krescue rootfs

## USAGE: ./build

. $(dirname "$0")/build.lib

echo "[i] MAKE FATFS ">&2

CP(){
    CMD cp -L $@
}
MD(){
    CMD mkdir -p $@
}

[ -d "$KTMP" ] || MD "$KTMP"

FATFS="$KTMP/$LABEL.fat.fs.dir"

[ -d "$FATFS" ] || \
    mkdir -p "$FATFS"

cd $FATFS

####

rescue=rescue
uimage=$rescue/uimage

MD $rescue
CP $ROOTFS_UIMAGE $uimage

####

cd - >/dev/null

